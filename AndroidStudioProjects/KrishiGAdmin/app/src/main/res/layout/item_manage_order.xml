<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/TableLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_6sdp"
        android:weightSum="4">

        <TextView
            android:id="@+id/orderIdDetailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:letterSpacing="0"
            android:layout_marginStart="@dimen/_3sdp"
            android:text="@string/order_id"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:text="@string/status"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/contactNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0"
            android:text="Contact Number"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/editImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/image"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_sub_cat_edit" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/color_grey1" />

</LinearLayout>